{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@database/*": ["src/database/*"],
      "@models/*": ["src/models/*"],
    }
  },
  "include": ["src/**/*.ts"],  // Adjust the path as per your project structure
  "exclude": ["node_modules"]
}